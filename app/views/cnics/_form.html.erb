<%= form_with(model: cnic, html: { multipart: true }, local: true) do |f| %>
  <% if cnic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cnic.errors.count, "error") %> prohibited this cnic from being saved:</h2>

      <ul>
      <% cnic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p style="color: red">* Required Fields</p>

  <% if can? :manage, Cnic %>
  <div class="form-group">
    <%= f.label :image %><h8 style="color: red">*</h8><br />
    <%= f.file_field :image%>
  </div>

  <div class="form-group">
    <%= f.label :sign %><h8 style="color: red">*</h8><br />
    <%= f.file_field :sign%>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :full_name %><h8 style="color: red">*</h8><br />
    <%= f.text_field :full_name, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :father_name %><h8 style="color: red">*</h8><br />
    <%= f.text_field :father_name , class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :country_of_stay %><h8 style="color: red">*</h8><br />
    <%= f.country_select :country_of_stay, :prompt => 'Select Country', class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :b_form %><h8 style="color: red">*</h8><br />
    <%= f.text_field :b_form , class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :dob %><h8 style="color: red">*</h8><br />
    <%= f.date_select :dob , :order => [:day, :month, :year], :start_year => 1900, :prompt => '', class: "form-control"%>
  </div>

  <% if can? :manage, Cnic %>
    <div class="form-group">
      <%= f.label :issue_date %><h8 style="color: red">*</h8><br />
      <%= f.date_select :issue_date , :order => [:day, :month, :year], :start_year => 1900, :prompt => '', class: "form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :expiry_date %><h8 style="color: red">*</h8><br />
      <%= f.date_select :expiry_date , :order => [:day, :month, :year], :start_year => 1900, :prompt => '', class: "form-control"%>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :gender %><h8 style="color: red">*</h8><br />
    <%= f.select :gender, User::GENDER_OPTIONS, :prompt => 'Select Gender' , class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :current_address %><h8 style="color: red">*</h8><br />
    <%= f.text_field :current_address , class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :permanent_address %><h8 style="color: red">*</h8><br />
    <%= f.text_field :permanent_address , class: "form-control"%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
