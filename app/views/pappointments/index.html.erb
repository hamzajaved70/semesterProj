<p id="notice"><%= notice %></p>
<div style="padding: 5%;">
<h1>Passport Appointments</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if can? :manage, Pappointment %>
        <% @apappointments.each do |pappointment| %>
          <tr>
            <td><%= pappointment.user_id %></td>
            <td><%= pappointment.time_slot %></td>
            <td><%= pappointment.cnic %></td>
            <td><%= link_to 'Show', pappointment %></td>
            <% if can? :manage, Pappointment %>
            <td><%= link_to 'Edit', edit_pappointment_path(pappointment) %></td>
            <td><%= link_to 'Destroy', pappointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
    <% else %>
        <% @pappointments.each do |pappointment| %>
          <tr>
            <td><%= pappointment.user_id %></td>
            <td><%= pappointment.time_slot %></td>
            <td><%= pappointment.cnic %></td>
            <td><%= link_to 'Show', pappointment %></td>
            <td><%= link_to 'Edit', edit_pappointment_path(pappointment) %></td>
            <td><%= link_to 'Destroy', pappointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_pappointment_path %>
</div>